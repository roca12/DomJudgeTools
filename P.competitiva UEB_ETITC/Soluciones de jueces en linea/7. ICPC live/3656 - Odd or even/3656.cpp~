#include <stdio.h>

int main(){
  int n;
  while (scanf("%d", &n) == 1 && n){
    int mi, mp, ji, jp, j;
    for (int i=0; i<n; ++i){
      scanf("%d", &j);
      mi += j%2;
      mp += !(j%2);
    }
    for (int i=0; i<n; ++i){
      scanf("%d", &j);
      ji += j%2;
      jp += !(j%2);
    }
    
    mp = (mp-ji<0)?0:mp-ji;
    mi = (mi-jp<0)?0:mi-jp;
    printf("%d\n", mi+mp);
  }
  return 0;
}
